@model WebApplab4_Forms_.Models.Controls

@{
    ViewData["Title"] = "Text Box";
}

<div>
    <h1>Text Area</h1>

    <form method = "post" id="formTextArea" name="formTextArea" action="">
    <div>
    <label for="input">Text</label>
    <textarea asp-for="textArea" class="form-control" id="input"></textarea>
    <span asp-validation-for="textArea"></span>
    </div>
    <input type="submit" value="Submit" formaction="TextArea" id="Button"/>
    </form>
</div>

<style>
