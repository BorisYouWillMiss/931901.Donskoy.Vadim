@model WebApplab4_Forms_.Models.Registration

@{
    ViewData["Title"] = "Reset your password";
}


<div>
    <h1>Reset your password</h1>
    @ViewBag.testCode
    @ViewBag.error
    <form method = "post">
     <div id="InputDiv">
            <label for="input">Password</label>
            <input id="InputDiv" type="password" asp-for="password" class="form-control" id="input"/>
            <span asp-validation-for="password"></span>
        </div>

        <div id="InputDiv">
            <label for="input">Confirm password</label>
            <input id="InputDiv" type="password" asp-for="confirmPassword" class="form-control" id="input"/>
            <span asp-validation-for="confirmPassword"></span>
        </div>
    <div id="Button">
        <input id ="InputDiv" id ="InputDiv" type="submit" value="Submit" formaction="PasswordReset"/>
    </div>
    </form>
</div>

<style>
    
    #InputDiv{
        margin-top: 15px;
        width: 300px;
    }
    
    </style>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}