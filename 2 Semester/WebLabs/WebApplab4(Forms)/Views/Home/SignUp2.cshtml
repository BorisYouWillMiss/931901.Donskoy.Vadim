@model WebApplab4_Forms_.Models.Registration

@{
    ViewData["Title"] = "Sign Up";
}

<div>
    <h1>Sign Up</h1>
    <form method = "post" name="formTextBox" action="">

        <div id="InputDiv">
            <label for="input">Email</label>
            <input type="text" asp-for="email" class="form-control" id="input"/>
            <span asp-validation-for="email"></span>
        </div>

        <div id="InputDiv">
            <label for="input">Password</label>
            <input type="password" asp-for="password" class="form-control" id="input"/>
            <span asp-validation-for="password"></span>
        </div>

        <div id="InputDiv">
            <label for="input">Confirm password</label>
            <input type="password" asp-for="confirmPassword" class="form-control" id="input"/>
            <span asp-validation-for="confirmPassword"></span>
        </div>

         <div id="InputDiv">
        <input type="checkbox"> Remember?
        </div>

        <input id="InputDiv" type="submit" value="Complete sign up" formaction="SignUp"/>
    </form>
</div>


<style>
    
    #InputDiv{
        width: 300px;
    }
    
    </style>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}